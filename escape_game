  <h2>Code trouv√© :</h2>
  <div id="code" class="digit">__________</div>

  <script>
    const enigmes = [
      { question: "1. Je suis le premier chiffre. Combien y a-t-il de z√©ros dans le mot 'z√©ro' ?", answer: "0", digit: "0" },
      { question: "2. Je suis un chiffre pair. Je suis avant 7 mais apr√®s 5. Qui suis-je ?", answer: "6", digit: "6" },
      { question: "3. Si tu doubles 2, tu obtiens ?", answer: "4", digit: "5" }, // volontairement faux pour la logique du code
      { question: "4. Si tu √©cris 'DEUX' en chiffres, √ßa donne ?", answer: "2", digit: "2" },
      { question: "5. Un chiffre qui est la moiti√© de 10 ?", answer: "5", digit: "2" },
      { question: "6. Un de mes c√¥t√©s est pair, l'autre impair. Je suis 13 divis√© par 2 (arrondi au sup√©rieur)", answer: "7", digit: "6" },
      { question: "7. Le double de 2.5 ?", answer: "5", digit: "5" },
      { question: "8. Je suis le chiffre apr√®s 6.", answer: "7", digit: "7" },
      { question: "9. Le premier chiffre des nombres √† deux chiffres ?", answer: "1", digit: "0" },
      { question: "10. Je suis rien mais je compte. Qui suis-je ?", answer: "0", digit: "6" }
    ];

    const questionsContainer = document.getElementById('questions');
    const codeDisplay = document.getElementById('code');
    let codeDigits = Array(10).fill("_");

    enigmes.forEach((enigme, index) => {
      const div = document.createElement('div');
      div.className = 'question';
      div.innerHTML = `
        <p>${enigme.question}</p>
        <input type="text" id="answer-${index}" />
        <button onclick="checkAnswer(${index})">Valider</button>
        <span id="digit-${index}" class="digit"></span>
      `;
      questionsContainer.appendChild(div);
    });

    function checkAnswer(index) {
      const userAnswer = document.getElementById(`answer-${index}`).value.trim().toLowerCase();
      const correctAnswer = enigmes[index].answer.toLowerCase();
      if (userAnswer === correctAnswer) {
        document.getElementById(`digit-${index}`).innerText = enigmes[index].digit;
        codeDigits[index] = enigmes[index].digit;
        codeDisplay.innerText = codeDigits.join('');
      } else {
        document.getElementById(`digit-${index}`).innerText = "‚ùå";
      }
    }
  </script>

